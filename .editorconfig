# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cmd]
end_of_line = crlf
charset = latin1

[*.iss]
end_of_line = crlf
charset = gb2312

[BeforeInfo.txt, AfterInfo.txt]
end_of_line = crlf
charset = gb2312

