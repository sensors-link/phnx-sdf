            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "python",
            "args": [
                "@PHNX_SDF@/tools/sdf.py",
                "flash"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "monitor",
            "type": "shell",
            "command": "python",
            "args": [
                "@PHNX_SDF@/tools/sdf.py",
                "monitor"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "gdbserver",
            "type": "shell",
            "command": "python",
            "args": [
                "@PHNX_SDF@/tools/sdf.py",
                "debug"
            ],
            "group": "build",
            "problemMatcher": [],
            //"isBackground": true
        }
    ],
    "options":{
        "cwd": "${workspaceFolder}",
        "env":{
            "PHNX_SDF":"@PHNX_SDF@"
        }
    }
